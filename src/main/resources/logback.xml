<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>bot.log</file>
        <append>true</append>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{35} - %msg%n</Pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
